# Auto detect text files and normalize line endings to LF
* text=auto

# Force LF for source code
*.dart text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.cmake text eol=lf
*.sh text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Force CRLF for Windows scripts
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.icns binary
*.pdf binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.zip binary
*.gz binary
*.7z binary
*.dll binary
*.exe binary
*.so binary
*.dylib binary

# Flutter/Dart specific
pubspec.lock -diff
*.g.dart linguist-generated=true
*.freezed.dart linguist-generated=true
*.config.dart linguist-generated=true
